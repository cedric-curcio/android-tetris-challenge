<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeRelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/homeStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/homeStartTxt" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/homeStartButton"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@id/homeStartButton"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/homeWidthTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cc000000"
            android:gravity="center"
            android:text="@string/homeInputWidth" />

        <EditText
            android:id="@+id/homeEditTextWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="number" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/homeStartButton"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/homeStartButton"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/homeHeightTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#cc000000"
            android:gravity="center"
            android:text="@string/homeInputHeight" />

        <EditText
            android:id="@+id/homeEditTextHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="number" />
    </LinearLayout>

</RelativeLayout>